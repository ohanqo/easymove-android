<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/history_date_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/history_start_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20 Juillet 2020" />

    <TextView
        android:id="@+id/history_start_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/history_time_item"
        app:layout_constraintStart_toEndOf="@id/history_date_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Gare Montparnasse" />

    <TextView
        android:id="@+id/history_time_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/history_price_item"
        app:layout_constraintStart_toEndOf="@id/history_start_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9h10" />

    <TextView
        android:id="@+id/history_price_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/history_time_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Navigo" />

</androidx.constraintlayout.widget.ConstraintLayout>