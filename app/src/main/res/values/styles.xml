<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryDark">@color/blue_600</item>
        <item name="colorAccent">@color/blue_100</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="CardViewTopRadius" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="TextInput.Rounded" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_small</item>
    </style>

    <style name="TextInput.Password.Rounded" parent="TextInput.Rounded">
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="cornerRadius">@dimen/spacing_small</item>
        <item name="android:elegantTextHeight">true</item>
    </style>

</resources>